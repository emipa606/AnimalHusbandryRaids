<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationConditional">
    <success>Always</success>
    <xpath>Defs/FactionDef[defName = "Empire"]</xpath>
    <match Class="PatchOperationAddModExtension">
      <xpath>Defs/FactionDef[defName = "Empire"]</xpath>
      <value>
        <li Class="AnimalHusbandryRaids.FactionAnimalList">
          <FactionType>Empire</FactionType>
          <PawnPercentage>0.1</PawnPercentage>
          <AnimalCommonality>0.5</AnimalCommonality>
          <FactionAnimals>
            <li>Bear_Grizzly</li>
            <li>Elephant</li>
            <!--Vanilla Animals Expanded — Desert-->
            <li>AEXP_Lion</li>
            <!--Vanilla Animals Expanded — Cats and Dogs-->
            <li>AEXP_GreatDane</li>
            <!--Vanilla Animals Expanded — Boreal Forest-->
            <li>AEXP_BlackBear</li>
            <!--Vanilla Animals Expanded — Tropical Rainforest-->
            <li>AEXP_Gorilla</li>
            <li>AEXP_Tiger</li>
            <!--Vanilla Animals Expanded — Tropical Swamp-->
            <li>AEXP_IndianElephant</li>
            <!--Animal Collab Project-->
            <li>ACPLion</li>
            <li>ACPSpiritwolf</li>
            <li>ACPBlackbear</li>
            <li>ACPBlackRhinoceros</li>
          </FactionAnimals>
        </li>
      </value>
    </match>
  </Operation>
  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/FactionDef[defName = "OutlanderCivil" or defName = "OutlanderRough"]</xpath>
    <value>
      <li Class="AnimalHusbandryRaids.FactionAnimalList">
        <FactionType>Outlanders</FactionType>
        <PawnPercentage>0.3</PawnPercentage>
        <AnimalCommonality>0.9</AnimalCommonality>
        <FactionAnimals>
          <li>LabradorRetriever</li>
          <li>Husky</li>
          <!--Vanilla Animals Expanded — Cats and Dogs-->
          <li>AEXP_GermanShepherd</li>
          <!--Animal Collab Project-->
          <li>ACPBlackwolf</li>
          <li>ACPMegabadger</li>
          <li>ACPWoolyHorse</li>
          <li>ACPAmurLeopard</li>
          <li>ACPTapir</li>
        </FactionAnimals>
      </li>
    </value>
  </Operation>
  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/FactionDef[defName = "TribeCivil" or defName = "TribeRough" or defName = "TribeSavage"]</xpath>
    <value>
      <li Class="AnimalHusbandryRaids.FactionAnimalList">
        <FactionType>Tribal</FactionType>
        <PawnPercentage>0.2</PawnPercentage>
        <AnimalCommonality>1</AnimalCommonality>
        <FactionAnimals>
          <li>WildBoar</li>
          <li>Wolf_Timber</li>
          <!--Vanilla Animals Expanded — Arid Shrubland-->
          <li>AEXP_Coyote</li>
          <!--Vanilla Animals Expanded — Boreal Forest-->
          <li>AEXP_ArcticCoyote</li>
          <!--Animal Collab Project-->
          <li>ACPKomodo</li>
          <li>ACPWildDog</li>
          <li>ACPDirewolf</li>
          <li>ACPOtter</li>
          <li>ACPPorcupine</li>
          <li>ACPWoolyRhino</li>
        </FactionAnimals>
      </li>
    </value>
  </Operation>
  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/FactionDef[defName = "Pirate"]</xpath>
    <value>
      <li Class="AnimalHusbandryRaids.FactionAnimalList">
        <FactionType>Pirate</FactionType>
        <PawnPercentage>0.2</PawnPercentage>
        <AnimalCommonality>0.8</AnimalCommonality>
        <FactionAnimals>
          <li>Boomrat</li>
          <li>Cougar</li>
          <!--Vanilla Animals Expanded — Desert-->
          <li>AEXP_Hyena</li>
          <!--Vanilla Animals Expanded — Cats and Dogs-->
          <li>AEXP_Rottweiler</li>
          <!--Vanilla Animals Expanded — Tropical Rainforest-->
          <li>AEXP_Jaguar</li>
          <!--Animal Collab Project-->
          <li>ACPMegascorpion</li>
          <li>ACPMegaFerret</li>
          <li>ACPRedPanda</li>
          <li>ACPHippopotamus</li>
          <li>ACPCheetah</li>
        </FactionAnimals>
      </li>
    </value>
  </Operation>
</Patch>
